<%= form_with model: @user, method: :post do |form| %>
  <br><br>
  <%= form.label :username, "Username:" %>
  <%= form.text_field :username, placeholder: "Enter your username"%><br><br>
  <%= form.label :email, "Email:" %>
  <%= form.text_field :email, placeholder: "example@email.com" %><br><br>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password %><br><br>
  <%= form.submit "Submit" %>
<% end %>
